# Set PostgreSQL version
ARG PG_VERSION=15
FROM quay.io/coredb/c-builder:pg${PG_VERSION}

# Clone repository
RUN git clone https://github.com/begriffs/pg_rational.git

# Set project version
ARG RELEASE=v0.0.2

# Build extension
RUN cd pg_rational && \
    git fetch origin ${RELEASE} && \
    git checkout ${RELEASE} && \
    make
